
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BiometricLayout.cshtml";
}
<div class="page-header">
    <h4 class="page-title">Enrollment</h4>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a href="#">
                <i class="fas fa-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="fas fa-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Enroll</a>
        </li>
        <li class="separator">
            <i class="fas fa-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Biographic Information</a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-xl-12 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Enroll</h6>
            </div>
            <div class="card-body">
                <form asp-controller="Enroll" asp-action="Index" method="post">
                    <div class="row">
                        <div class="col-md-6 col-xl-6">
                            <div class="form-group">
                                <label for="FirstName">First Name</label>
                                <input  type="text" class="form-control form-control-lg" id="FirstName" name="FirstName" required maxlength="50">
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-6">
                            <div class="form-group">
                                <label for="LastName">Last Name</label>
                                <input  type="text" class="form-control form-control-lg" id="LastName" name="LastName" required maxlength="50">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xl-6">
                            <div class="form-group">
                                <label for="Gender">Gender</label>
                                <select type="text" class="form-control form-control-lg" id="Gender" name="Gender" required maxlength="50">
                                    <option selected disabled value="">Choose your gender type</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-6">
                            <div class="form-group">
                                <label for="PhoneNumb">Phone Number</label>
                                <input  type="tel" class="form-control form-control-lg" id="PhoneNumb" name="PhoneNumb" required pattern="^1?[0-9]{10}$">
                                <small class="form-text text-muted">Not a valid Phone number</small>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xl-6">
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input  type="email" class="form-control form-control-lg" id="Email" name="Email" required>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-6">
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input  type="password" class="form-control form-control-lg" id="Password" name="Password" required minlength="6">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xl-6">
                            <div class="form-group">
                                <label for="ConfirmPassword">Confirm Password</label>
                                <input  type="password" class="form-control form-control-lg" id="ConfirmPassword" name="ConfirmPassword" required>
                                <small class="form-text text-muted">The password and confirmation password do not match.</small>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
